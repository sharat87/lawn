export skip_global_compinit=1

export EDITOR='vim'

# Load RVM function
if [ -s ~/apps/rvm/rvm/scripts/rvm ]; then
    . ~/apps/rvm/rvm/scripts/rvm
fi

# Add all under ~/apps/*/bin directories to path
export PATH=$(echo ~/apps/*/bin | tr \  :):$PATH

# Home bin and lawn' bin
export PATH=~/bin:~/lawn/bin:~/.local/bin:$PATH

export VIRTUAL_ENV_DISABLE_PROMPT=1
# source ~/labs/virtualenvman/virtualenvman.sh
export PIP_DOWNLOAD_CACHE=~/.pip/cache
export PYTHONPATH=~/lawn/python-lib:"$PYTHONPATH"

# Java home directories
export JAVA_4_HOME=$HOME/apps/j2sdk1.4.2_19
export JAVA_5_HOME=$HOME/apps/jdk1.5.0_22
export JAVA_6_HOME=$HOME/apps/jdk1.6.0_35

# Go stuff.
export GOROOT=$HOME/apps/go

# Haskell stuff.
export PATH=$HOME/.cabal/bin:$PATH

# Heroku Toolbelt.
export PATH="/usr/local/heroku/bin:$PATH"

export HISTIGNORE="&:[bf]g:exit:logout"

export MANPAGER=mage

