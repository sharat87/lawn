# Path to my zsh configuration.
export ZSH_CUSTOM=$HOME/lawn/shell/custom-configs

# Red dots to be displayed while waiting for completion
COMPLETION_WAITING_DOTS=true

# Antigen â€” A zsh plugin manager
export ANTIGEN_DEFAULT_REPO_URL=https://github.com/sharat87/oh-my-zsh.git
source ~/labs/antigen/antigen.zsh

# Load the oh-my-zsh's library.
bundle-lib

# Bundles from the default repo declared above.
bundle fabric
bundle lein
bundle pip
bundle command-not-found
bundle heroku
bundle extract
bundle svn
bundle git

# nicoulaj's moar completion files for zsh
bundle zsh-users/zsh-completions

# Vim like bindings plugin.
bundle sharat87/zsh-vim-mode

# FIXME: Following doesn't work because it depends on the oh-my-zsh way of doing
# things. It uses the $ZSH variable and expects the `plugins` directory in it.
# bundle --loc=plugins/history-substring-search
source $ZSH_CUSTOM/history-substring-search.zsh

# Syntax highlighting bundle.
bundle zsh-users/zsh-syntax-highlighting

# FIXME: Need a better way to specify custom bundles.
source $ZSH_CUSTOM/aliases
source $ZSH_CUSTOM/z.sh

# Load the prompt theme.
bundle-theme prose

# Done specifying bundles. Load the completions.
bundle-apply

# Setup for rupa's z
add-zsh-hook precmd z_precmd
function z_precmd {
    _z --add "$PWD"
}

# wohwohwohowhohohoho!
# fortune -s -n 300 | cowsay | lolcat
