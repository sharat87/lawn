# Keep sensitive information away from repository files
source ~/dotfiles/mutt/read-creds|

set spoolfile = "+/INBOX"
set postponed = "+/Drafts"
set record = "+/Sent Items"

set query_command = "python ~/dotfiles/mail/address-book.py '%s'"

set header_cache = ~/.mutt/cache/headers
set message_cachedir = ~/.mutt/cache/bodies
set certificate_file = ~/.mutt/certificates

set history = 5000
set history_file = ~/.mutt/history
set save_history = 5000

set signature = ~/dotfiles/mutt/signature
set sig_on_top
unset sig_dashes

set beep_new = yes
set smart_wrap

set header

auto_view text/html

bind index L bottom-page

macro index ,s s=INBOX.saas<space><enter><enter> "Move mail to saas directory"

source ~/dotfiles/mutt/solarized-colors/mutt-colors-solarized-dark-16.muttrc
