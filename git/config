[user]
  name = Shrikant Sharat
  email = shrikantsharat.k@gmail.com

[core]
  excludesfile = /home/sharat/.gitignore
  whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol

[alias]
  a = add
  s = status
  ci = commit
  b = branch
  co = checkout
  re = remote
  d = diff
  dc = diff --cached
  lg = log -p
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
  ls = ls-files

  # Show files ignored by git:
  ign = ls-files -o -i --exclude-standard

[color]
  ui = true
  branch = auto
  diff = auto
  status = auto

[color "branch"]
  current = cyan
  local = yellow
  remote = green

[color "diff"]
  meta = yellow
  frag = magenta
  old = red bold
  new = green
  whitespace = red bold reverse

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

